<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="it.geek.pht.pojo.Libro" table="libri" >
        <id name="idLibro" type="java.lang.Integer">
            <column name="id_libro" />
            <generator class="native" />
        </id>
        <property name="titolo" type="java.lang.String">
            <column name="titolo" length="45" not-null="true" />
        </property>
        <property name="pagine" type="java.lang.Integer">
            <column name="pagine" not-null="true" />
        </property>
        
        <!-- RELAZIONE COMPOSTA -->
        <many-to-one name="utente" class="it.geek.pht.pojo.Utente" lazy="false">
            <column name="fk_utente" not-null="false" />
        </many-to-one>
    </class>
</hibernate-mapping>
