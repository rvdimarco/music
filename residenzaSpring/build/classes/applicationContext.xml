<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/tx 
	http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
	http://www.springframework.org/schema/aop 
	http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">


	<bean id="utenteService" class="it.geek.spring.service.PersonaServiceImpl">
		<property name="personaDAO">
			<ref bean="personadao"></ref>
		</property>
	</bean>



	<bean id="personadao" class="it.prova.dao.PersonaDAOImpl">
		<property name="connection">
			<ref bean="myconnection"></ref>
		</property>
	</bean>

	<bean id="myconnection" class="it.prova.connection.MyConnection"
		factory-method="createConnection">
	</bean>


</beans>


